{
  "name": "connections-manager",
  "displayName": "Network Connections Manager",
  "description": "Manages network connections including WiFi, Ethernet, and LTE",
  "version": "1.0.0",
  "target": ["jetson", "pi"],
  "dependencies": [],
  "services": ["connections-manager"],
  "paths": {
    "bin": "/usr/local/bin/connections_manager_service.py",
    "config": "/etc/ark/network/connections_manager.toml",
    "log": "/var/log/connections_manager.log"
  },
  "scripts": {
    "install": "scripts/install_connections_manager.sh"
  }
}